{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "ES2022",
        "module": "ES2022",
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "es2021"
        ],
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "emitDecoratorMetadata": false,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noImplicitOverride": true,
        "sourceMap": true,
        "declaration": true,
        "incremental": true,
        "declarationDir": "dist/types",
        "outDir": "dist/lib",
        "baseUrl": ".",
        "typeRoots": [
            "types",
            "node_modules/@types"
        ]
    },
}