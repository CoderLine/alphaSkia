{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$ref": "#/definitions/build",
  "title": "Build Schema",
  "definitions": {
    "build": {
      "type": "object",
      "properties": {
        "Architecture": {
          "type": "string",
          "enum": [
            "Arm",
            "Arm64",
            "X64",
            "X86"
          ]
        },
        "Continue": {
          "type": "boolean",
          "description": "Indicates to continue a previously failed build attempt"
        },
        "DepotPath": {
          "type": "string"
        },
        "GitExe": {
          "type": "string"
        },
        "GnExe": {
          "type": "string"
        },
        "GnVerbose": {
          "type": "boolean"
        },
        "GradlewExe": {
          "type": "string"
        },
        "Help": {
          "type": "boolean",
          "description": "Shows the help text for this build assembly"
        },
        "Host": {
          "type": "string",
          "description": "Host for execution. Default is 'automatic'",
          "enum": [
            "AppVeyor",
            "AzurePipelines",
            "Bamboo",
            "Bitbucket",
            "Bitrise",
            "GitHubActions",
            "GitLab",
            "Jenkins",
            "Rider",
            "SpaceAutomation",
            "TeamCity",
            "Terminal",
            "TravisCI",
            "VisualStudio",
            "VSCode"
          ]
        },
        "IsReleaseBuild": {
          "type": "boolean"
        },
        "JavaHome": {
          "type": "string"
        },
        "LlvmHome": {
          "type": "string"
        },
        "NdkPath": {
          "type": "string"
        },
        "NinjaExe": {
          "type": "string"
        },
        "NinjaVerbose": {
          "type": "boolean"
        },
        "NoLogo": {
          "type": "boolean",
          "description": "Disables displaying the NUKE logo"
        },
        "ParallelGitClone": {
          "type": "boolean"
        },
        "Partition": {
          "type": "string",
          "description": "Partition to use on CI"
        },
        "Plan": {
          "type": "boolean",
          "description": "Shows the execution plan (HTML)"
        },
        "Profile": {
          "type": "array",
          "description": "Defines the profiles to load",
          "items": {
            "type": "string"
          }
        },
        "PythonExe": {
          "type": "string"
        },
        "Rebuild": {
          "type": "boolean"
        },
        "Root": {
          "type": "string",
          "description": "Root directory during build execution"
        },
        "SkiaPath": {
          "type": "string"
        },
        "Skip": {
          "type": "array",
          "description": "List of targets to be skipped. Empty list skips all dependencies",
          "items": {
            "type": "string",
            "enum": [
              "DotNet",
              "DotNetBuild",
              "DotNetPack",
              "DotNetTest",
              "Java",
              "JavaBuild",
              "JavaPack",
              "JavaTest",
              "LibAlphaSkia",
              "LibAlphaSkiaGitSyncDeps",
              "LibAlphaSkiaPatchSkiaBuildFiles",
              "LibAlphaSkiaTest",
              "LibSkia",
              "LibSkiaGitSyncDeps",
              "LibSkiaPatchSkiaBuildFiles",
              "LibSkiaWithCache",
              "Node",
              "NodeBuild",
              "NodePack",
              "NodeTest",
              "PrepareGitHubArtifacts",
              "SetupDepotTools"
            ]
          }
        },
        "Target": {
          "type": "array",
          "description": "List of targets to be invoked. Default is '{default_target}'",
          "items": {
            "type": "string",
            "enum": [
              "DotNet",
              "DotNetBuild",
              "DotNetPack",
              "DotNetTest",
              "Java",
              "JavaBuild",
              "JavaPack",
              "JavaTest",
              "LibAlphaSkia",
              "LibAlphaSkiaGitSyncDeps",
              "LibAlphaSkiaPatchSkiaBuildFiles",
              "LibAlphaSkiaTest",
              "LibSkia",
              "LibSkiaGitSyncDeps",
              "LibSkiaPatchSkiaBuildFiles",
              "LibSkiaWithCache",
              "Node",
              "NodeBuild",
              "NodePack",
              "NodeTest",
              "PrepareGitHubArtifacts",
              "SetupDepotTools"
            ]
          }
        },
        "TargetOs": {
          "type": "string",
          "enum": [
            "Android",
            "iOS",
            "iOSSimulator",
            "Linux",
            "MacOs",
            "Windows"
          ]
        },
        "use-cache": {
          "type": "string"
        },
        "Variant": {
          "type": "string",
          "enum": [
            "Jni",
            "Node",
            "Shared",
            "Static"
          ]
        },
        "Verbosity": {
          "type": "string",
          "description": "Logging verbosity during build execution. Default is 'Normal'",
          "enum": [
            "Minimal",
            "Normal",
            "Quiet",
            "Verbose"
          ]
        }
      }
    }
  }
}
